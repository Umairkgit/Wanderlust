<% layout("/layouts/boilerplate") %>


    <div class="row mt-3 signup-page ">
        <h2 class="col-6 offset-3 mb-3 heading">SIGNUP FOR WONDERLUST</h2>
        <div class="col-6 offset-3 signup-form ">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3 user-info">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-control" required>
                    <div class="valid-feedback">Title</div>
                </div>
                <div class="mb-3 user-info">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>
                <div class="mb-3 user-info">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>
                
                <button class="btn btn-primary signup-btn">SignUp</button> 
                
        </div>
    </div>






  